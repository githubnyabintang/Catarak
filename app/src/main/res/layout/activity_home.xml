<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView4"
        style="@style/medium"
        android:layout_width="133dp"
        android:layout_height="22dp"
        android:layout_marginStart="40dp"
        android:text="@string/welcome_back"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginBottom="150dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.375" />

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="389dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_view"
        app:layout_constraintVertical_bias="0.062">

        <com.capstone.catarak.widget.ProgressButton
            android:id="@+id/btn_scImage"
            style="@style/Widget.ProgressButton.Primary"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            app:text="@string/selImage"
            tools:ignore="TouchTargetSizeCheck" />

        <com.capstone.catarak.widget.ProgressButton
            android:id="@+id/btn_predict"
            style="@style/Widget.ProgressButton.Primary"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            app:text="@string/predict"
            tools:ignore="TouchTargetSizeCheck" />

        <com.capstone.catarak.widget.ProgressButton
            android:id="@+id/btn_delete"
            style="@style/Widget.ProgressButton.Primary"
            android:layout_width="125dp"
            android:layout_height="40dp"
            app:text="@string/delete"
            tools:ignore="TouchTargetSizeCheck" />


    </LinearLayout>

    <com.capstone.catarak.widget.ProgressButton
        android:id="@+id/btn_logout"
        style="@style/Widget.ProgressButton.Primary"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="@dimen/spacing_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:text="@string/logout"
        app:textAllCaps="false"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/resView"
        android:layout_width="154dp"
        android:layout_height="38dp"
        android:text="@string/result"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout"
        app:layout_constraintVertical_bias="0.087" />

</androidx.constraintlayout.widget.ConstraintLayout>